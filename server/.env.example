# Server environment example
# Copy to .env and fill in values

# App
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:5173
# Comma-separated list for CORS; overrides CLIENT_URL if set
ALLOWED_ORIGINS=http://localhost:5173

# Security cookies
# In production with cross-site cookies, set: COOKIE_SAME_SITE=none and COOKIE_SECURE=true
COOKIE_SAME_SITE=lax
COOKIE_SECURE=false

# JWT
JWT_SECRET=replace-with-strong-secret
JWT_EXPIRE=7d

# Mongo
MONGODB_URI=mongodb://localhost:27017/edume

# Cloudinary
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Email (nodemailer)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL="EduMe <no-reply@edume.test>"
